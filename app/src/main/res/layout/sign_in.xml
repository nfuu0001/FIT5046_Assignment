<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    tools:context = ".MainActivity">

    <TextView android:text = "Sign In"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/textview"
        android:textSize = "35dp"
        android:layout_alignParentTop = "true"
        android:textColor = "#24909E"
        android:layout_centerHorizontal = "true" />

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Welcome to My Movie Memoir!"
        android:id = "@+id/textView"
        android:layout_below = "@+id/textview"
        android:layout_centerHorizontal = "true"
        android:textColor = "#637678"
        android:textSize = "20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/movie_icon"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="53dp"
        android:src="@drawable/username" />


    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/et_username"
        android:hint = "Enter Username"
        android:inputType="textEmailAddress"
        android:focusable = "true"
        android:textColorHighlight = "#3E57E4"
        android:textColorHint = "#7BB4E1"
        android:layout_marginTop = "46dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below = "@+id/imageView"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />


    <ImageView
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_below="@+id/et_username"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/password_icon" />


    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_username"
        android:layout_alignEnd="@+id/et_username"
        android:layout_alignRight="@+id/et_username"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="1dp"

        android:layout_marginRight="30dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColorHint="#7BB4E1" />

    <ImageView
        android:id="@+id/iv_showPassword"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_below="@+id/et_username"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/password_eye" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_below="@+id/iv_showPassword"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:id="@+id/bt_signin"
        android:background="#8CBFE8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/iv_showPassword"
        android:layout_marginStart="250dp"
        android:text="Sign Up"
        android:background="#8CBFE8"
        android:id="@+id/bt_signup" />


</RelativeLayout>